<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MyInfoActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/padding_body">

    <ImageView
        android:background="@drawable/circle_input"
        android:layout_width="@dimen/logo_height"
        android:layout_height="@dimen/logo_height"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/avatar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:background="@drawable/round_input">
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="@dimen/padding_textbox"
            android:textAlignment="center"
            android:textColor="@color/primaryColor"
            android:textColorHint="@color/primaryColor"
            android:textSize="@dimen/text_size_body" />


        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/edit"
            android:layout_toRightOf="@+id/etEmail">
        </ImageButton>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"

        android:background="@drawable/round_input">
        <EditText
            android:id="@+id/etPhone"
            android:layout_width="300dp"
            android:layout_height="match_parent"

            android:hint="Phone"
            android:inputType="textEmailAddress"
            android:padding="@dimen/padding_textbox"
            android:textAlignment="center"
            android:textColor="@color/primaryColor"
            android:textColorHint="@color/primaryColor"
            android:textSize="@dimen/text_size_body" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/edit"
            android:layout_toRightOf="@+id/etPhone">
        </ImageButton>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_input">
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="300dp"
            android:layout_height="match_parent"

            android:hint="Password"
            android:inputType="textEmailAddress"
            android:padding="@dimen/padding_textbox"
            android:textAlignment="center"
            android:textColor="@color/primaryColor"
            android:textColorHint="@color/primaryColor"
            android:textSize="@dimen/text_size_body" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/edit"
            android:layout_toRightOf="@+id/etPassword">
        </ImageButton>
    </RelativeLayout>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/round_button"
            android:padding="@dimen/padding_textbox"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_body" />

</LinearLayout>